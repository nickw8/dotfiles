{
  "security.workspace.trust.untrustedFiles": "open",

  /**
   * Better Defaults
   **/
  "editor.copyWithSyntaxHighlighting": false,
  "diffEditor.ignoreTrimWhitespace": false,
  //   "editor.emptySelectionClipboard": false,
  "workbench.editor.enablePreview": false,
  "window.newWindowDimensions": "inherit",
  "editor.multiCursorModifier": "ctrlCmd",
  "files.trimTrailingWhitespace": true,
  "diffEditor.renderSideBySide": false,
  "editor.snippetSuggestions": "top",
  "editor.detectIndentation": false,
  // "window.nativeFullScreen": false, // Mac Only
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": "none",
  "workbench.statusBar.visible": false,
  "editor.minimap.enabled": false,
  "workbench.activityBar.location": "hidden",
  "files.autoSave": "onFocusChange",

  /**
   * Theme
   **/
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Default",

  /**
   * Silence The Noise
   */
  // "breadcrumbs.enabled": false,
  // "scm.diffDecorations": "none",
  // "editor.hover.enabled": false,
  "editor.matchBrackets": "never",
  "workbench.tips.enabled": false,
  // "editor.colorDecorators": false,
  // "git.decorations.enabled": false,
  "workbench.startupEditor": "none",
  "editor.lightbulb.enabled": "onCode",
  // "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  // "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  // "problems.decorations.enabled": false,
  // "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  /**
   * Typography
   **/
  "terminal.integrated.fontFamily": "MesloLGLDZ Nerd Font Mono",
  "editor.fontFamily": "MesloLGLDZ Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1,

  /**
   * Terminal
   **/
  "terminal.integrated.scrollback": 5000,

  /**
   * Formatting
   **/
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],

  /**
   * Languages
   **/
  "rust-analyzer.check.command": "clippy",
  "[rust]": {
    "editor.defaultFormatter": "jinxdash.prettier-rust"
  },
  "terraform.experimentalFeatures.validateOnSave": true,
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    }
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    }
  },
  "[toml]": {
    "editor.defaultFormatter": "bodil.prettier-toml"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.languageServer": "Pylance",
  "[json]": {
    "editor.defaultFormatter": "mohsen1.prettify-json",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "[lua]": {
    "editor.quickSuggestions": {
      "comments": true,
      "other": true,
      "strings": true
    },
    "editor.semanticHighlighting.enabled": true,
    "editor.tabCompletion": "on",
    "editor.quickSuggestionsDelay": 1,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.defaultFormatter": "sumneko.lua"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },
  "yaml.customTags": ["!reference sequence"],
  "security.workspace.trust.enabled": false,
  "git.confirmSync": false
}
